{
	"name": "@playform/prettier",
	"version": "0.0.1",
	"description": "Concurrent prettier runner",
	"keywords": [
		"prettier",
		"parallel",
		"concurrent",
		"mixer",
		"playform"
	],
	"homepage": "https://github.com/PlayForm/RunPrettier#readme",
	"bugs": {
		"url": "https://github.com/PlayForm/RunPrettier/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/PlayForm/RunPrettier.git"
	},
	"license": "MIT",
	"author": "Connor Peet <connor@peet.io>",
	"main": "./Target/index.js",
	"bin": {
		"pprettier": "./Target/index.js"
	},
	"scripts": {
		"build": "tsc",
		"fmt": "tsc && node Target/index --write \"Source/**/*.ts\" && npm run test:lint -- --fix",
		"prepare": "tsc",
		"test": "npm run test:lint && npm run test:fmt",
		"test:fmt": "node Target/index \"Source/**/*.ts\" --check",
		"test:lint": "eslint \"Source/**/*.ts\""
	},
	"dependencies": {
		"chalk": "5.3.0",
		"commander": "12.1.0",
		"glob-stream": "8.0.2",
		"ignore": "6.0.2",
		"ora": "8.1.0",
		"prettier": "*",
		"rxjs": "7.8.1"
	},
	"devDependencies": {
		"@types/glob-stream": "8.0.2",
		"@types/node": "22.7.4",
		"@types/prettier": "3.0.0",
		"@typescript-eslint/eslint-plugin": "8.8.0",
		"@typescript-eslint/parser": "8.8.0",
		"eslint": "9.12.0",
		"typescript": "5.6.2"
	}
}
